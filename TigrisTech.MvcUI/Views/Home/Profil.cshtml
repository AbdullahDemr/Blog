@model TigrisTech.Entities.Dtos.Editor.Profils.ProfilListDto

@{
    Layout = "_Layout";
    ViewBag.Title = "Doktorlar";
}

    <!-- ======= Our Team Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Ekibimiz</h2>
          <ol>
            <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
            <li>Ekibimiz</li>
          </ol>
        </div>

      </div>
    </section><!-- End Our Team Section -->

    <!-- ======= Team Section ======= -->
    <section class="team" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
      <div class="container">

        <div class="row">

          
          @foreach (var profil in Model.Profils)
         {
              <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
            <div class="member">
              <div class="member-img">
                <img src="~/img/@profil.Picture" class="img-fluid" alt="">
                <div class="social">
                  <a href="@profil.TwitterLink" target="_blank"><i class="bi bi-twitter"></i></a>
                  <a href="@profil.FacebookLink" target="_blank"><i class="bi bi-facebook"></i></a>
                  <a href="@profil.InstagramLink" target="_blank"><i class="bi bi-instagram"></i></a>
                  <a href="@profil.LinkedInLink" target="_blank"><i class="bi bi-linkedin"></i></a>
                </div>
              </div>
              <div class="member-info">
                <h4>@profil.FirstName @profil.LastName</h4>
              @*  <span>Product Manager</span>*@
                <p>@profil.About</p>
              </div>
            </div>
          </div>
         }
         
                
          

        </div>

      </div>
    </section><!-- End Team Section -->