@model UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Düzenle";
}
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span>Profil Düzenle</h4>
            </div>
            <div class="card-body"> 
                   <form asp-controller="User" asp-action="ChangeDetail" enctype="multipart/form-data" id="form-user-update" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary">
                    </div>
                    <input asp-for="Id" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input class="form-control" asp-for="UserName" placeholder="Lütfen, kullanıcı adı giriniz." />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" placeholder="Lütfen, e-posta adı giriniz." />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                  
                      <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lütfen, Telefon Numaranızı giriniz." />
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Picture"></label>
                        <input asp-for="Picture" type="hidden"/>
                        <img type="text"  src="~/img/@Model.Picture" alt="@Model.UserName" class="my-image"/>
                        <span class="text-danger" asp-validation-for="Picture"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="File" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Lütfen, Resminizi yükleyiniz." />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span>Kaydet</button>
                        <a type="submit" class="btn alert-danger btn-block" asp-area="Area" asp-controller="User" asp-action="Index"><span class="fas fa-times"></span>İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>