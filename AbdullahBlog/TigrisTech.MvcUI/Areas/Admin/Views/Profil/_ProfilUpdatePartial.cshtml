@model ProfilUpdateDto

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-edit"></span> Profil Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" id="form-profil-update">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" asp-for="FirstName" placeholder="Lütfen, profil adını giriniz." />
                            <span class="text-danger" asp-validation-for="FirstName"></span>
                        </div>
                         <div class="form-group col-md-6">
                            <label asp-for="LastName"></label>
                            <input class="form-control" asp-for="LastName" placeholder="Lütfen, profil soyadınızı giriniz." />
                            <span class="text-danger" asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="About"></label>
                            <textarea class="form-control" asp-for="About"></textarea>
                            <span class="text-danger" asp-validation-for="About"></span>
                        </div>
                            <div class="form-group col-md-12">
                            <label asp-for="Picture"></label>
                            <input asp-for="Picture" type="hidden" />
                            <img class="my-image" src="~/img/@Model.Picture" alt="@Model.FirstName" />
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="PictureFile"></label>
                            <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Lütfen, resim yükleyin" />
                            <span class="text-danger" asp-validation-for="PictureFile"></span>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                            <span class="text-danger" asp-validation-for="IsActive"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-block" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
                <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Kaydet</button>
            </div>
        </div>
    </div>
</div>
