@model TigrisTech.Entities.Dtos.Blog.CommentAddDto

<div class="card my-4">
    <h5 class="card-header">Bir yorum Ekle :</h5>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;">
            </div>
            <input asp-for="ArticleId" type="hidden" />
            <div class="form-group">
                <div class="form-group mt-3 ">
                    <label asp-for="CreatedByName"></label>
                    <textarea typeof="text" class="form-control" asp-for="CreatedByName"></textarea>
                </div>
                <div class="form-group mt-3">
                    <textarea class="form-control" rows="3" asp-for="Text"></textarea>
                </div>
            </div>


            <div class="text-center mt-3">
                <button type="button" class="btn btn-primary " id="btnSave">Ekle</button>
            </div>
        </form>
    </div>
</div>