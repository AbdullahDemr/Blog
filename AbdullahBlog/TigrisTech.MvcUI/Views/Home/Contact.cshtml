@model TigrisTech.Entities.Dtos.Editor.Emails.EmailSendDto
@{
    Layout = "_Layout";
   ViewBag.Title = "Email";
}

<!-- ======= Contact Section ======= -->
<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2>İletişim</h2>
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li>İletişim</li>
            </ol>
        </div>
    </div>
</section><!-- End Contact Section -->
<!-- ======= Contact Section ======= -->
<section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="info-box">
                            <i class="bx bx-map"></i>
                            <h3>Adresimiz</h3>
                            <p>@ViewBag.Contact.Address</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <i class="bx bx-envelope"></i>
                            <h3>Emailimiz</h3>
                            <p>@ViewBag.Contact.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <i class="bx bx-phone-call"></i>
                            <h3>Numaramız</h3>
                            <p>@ViewBag.Contact.PhoneNumber</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <form asp-controller="Home" asp-action="ContactSend" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;">
                    </div>
                    <h4 class="text-info text-center">Bizlere bir mesaj bırakınız.</h4>
                    <div class="form-group">
                        <div class="row mt-3">
                            <div class="col-md-6 form-group">
                                <input type="text" class="form-control " placeholder="Adınız" asp-for="Name" required>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control " placeholder="E-Posta Adresiniz" asp-for="Email" required minlength="4">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control " placeholder="Konu / Başlık" asp-for="Subject" required minlength="10">
                            <span class="text-danger" asp-validation-for="Subject" minlength="4"></span>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control " placeholder="Mesajınız..." asp-for="Message" style="width: 100%; height: 150px;" required minlength="20"></textarea>
                            <span class="text-danger" asp-validation-for="Message" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class=" btn btn-info btn-block">Gönder</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
<!-- ======= Map Section ======= -->
<section class="map mt-2">
    <div class="container-fluid p-0">
        <iframe src="@ViewBag.Contact.MapArea" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
    </div>
</section><!-- End Map Section -->